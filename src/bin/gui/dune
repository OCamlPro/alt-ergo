
(documentation
  (package altgr-ergo)
)

(executable
  (name         Main_gui)
  (public_name  altgr-ergo)
  (package      altgr-ergo)
  (libraries    alt_ergo_common threads.posix lablgtk2 lablgtk2.sourceview2)
  (modules      Gui_session Gui_config Annoted_ast Connected_ast
                Gui_replay Main_gui)
  (link_flags   (-linkall))
)

; Rule to generate a man page for altgr-ergo
(rule
  (target  altgr-ergo.1)
  (action (with-stdout-to %{target} (run altgr-ergo --help=groff)))
)

; Install the man page
(install
 (files    altgr-ergo.1)
 (section  man)
 (package  altgr-ergo)
)
